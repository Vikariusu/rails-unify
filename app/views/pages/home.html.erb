<% content_for :full_page do %>
<div class="banner" id="banner-photo" style="height: 100vh;">
  <div class="container text-center">
    <div class="row">
      <div class="col-xs-12">

          <!-- Title -->
            <div class="title">
              <h1 style="font-size: 120px;">Unify</h1>
            </div>

            <div class="slogan">
              <p>Don't miss out on</p>
              <p style="font-weight: bold;">valuable connections</p>
            </div>

          <!-- Discover events near you - link with event_path -->
          <div class="discover">
            <div class="btn-event">
              <h3> <%= link_to "Find your event", events_path%> </h3>
            </div>
          </div>

          <!-- Or -->
          <div class="or">
            <p>or</p>
          </div>

          <!-- Sign In & Sign Up -->
          <!-- <i class="fa fa-linkedin-square fa-2x" aria-hidden="true"></i> -->
          <div class="join">
            <div class="btn-join" style="margin-top: 0px;">
              <p><%= link_to "Join us now", new_user_session_path %></p>
            </div>
          </div>

          <div class="already-member">
            <p style="font-size: 15px" class="already-member">Already a member? <%= link_to "Sign in", new_user_session_path %></p>
          </div>

          <!-- Terms and conditions -->
          <!-- <p>Terms and conditions</p> -->

      </div>
    </div>
  </div>
  </div>
<% end %>
